<div class="guests-page">
  <div class="container">
    <div class="row">
      <div class="col">
        <header class="d-flex justify-content-between align-items-center my-5">
          <h1>Guests</h1>
          <%= link_to "New Guest", new_guest_path, class: "btn btn-primary", remote: true %>
        </header>

        <table class="table mt-5">
          <tbody>
            <% @guests.each do |guest| %>
              <%= render "guest", guest: guest %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
